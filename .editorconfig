# Configuración base para el lenguaje C#
[*.cs]

# Reglas de estilo de código (Ejemplos)
# Usar "var" cuando el tipo es obvio
csharp_style_var_for_built_in_types = true:suggestion
# Ordenar directivas "using"
csharp_style_using_directives_placement = inside_namespace:warning
# Usar llaves si es necesario, incluso para una sola línea
csharp_style_braces_for_single_line_statements = true:error

# Reglas de formato (Ejemplos)
# Sangría (indentación) con 4 espacios
indent_style = space
indent_size = 4

# Eliminar líneas en blanco excesivas
# Máximo 1 línea en blanco dentro de bloques de código
csharp_max_blank_lines_between_members = 1
csharp_max_blank_lines_in_code = 1